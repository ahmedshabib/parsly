{
    "e_thing_to_remove": [
        "//script",
        "//div[@class=\"gads\"]",
        "//comment()",
        "//div[@class=\"bonus-content\"]",
        "//*[@id=\"story\"]/section/section[@class=\"gallery\"]",
        "//*[@id=\"story\"]/section/div[@class=\"shift-to-hero\"]",
        "//*[@id=\"story\"]/section/script",
        "//div[@class=\"see-also\"]"
    ],

    "e_content": {
        "path": "//*[@id=\"story\"]/section",
        "type": "html"
    },

    "e_title": {
        "path": "//*[@id=\"story\"]/header/h1",
        "type": "text"
    },

    "e_main_image_url": {
        "path": "//*[@id=\"story\"]/header/figure/img",
        "type": "node",
        "query_attrib": "src"
    },

    "e_main_image_caption": {
        "path": "//*[@id=\"story\"]/header/figure/figcaption",
        "type": "text"
    },

    "e_main_image_credits": {
        "path": "//*[@id=\"story\"]/header/figure/div[@class=\"image-credit\"]",
        "type": "text"
    },

    "e_main_video_url": {
        "path": "//*[@id=\"story\"]/section/div[@class=\"shift-to-hero\"]/p/iframe",
        "type": "node",
        "query_attrib": "src"
    },

    "e_main_image_url_twitter": {
        "path": "/html/head/meta[@name=\"twitter:image\"]",
        "type": "node",
        "query_attrib": "content"
    },

    "e_category": {
        "path": "//*[@id=\"story\"]/footer[@class=\"article-topics\"]/a",
        "type": "nodes",
        "subtype": "text"
    },

    "e_author_name": {
        "path": "//*[@id=\"story\"]/header/div[@class=\"article-info\"]/a/div/span",
        "type": "text"
    },

    "e_author_image": {
        "path": "//*[@id=\"story\"]/header/div[@class=\"article-info\"]/a/img",
        "type": "node",
        "query_attrib": "src"
    },
    "e_base_url" : "http://www.mashable.com"
}
